#!/bin/bash
# Usage:
# mount|umount|reload.
#

udev_mount()
{
	/usr/local/emhttp/plugins/unassigned.devices/scripts/unassigned_mount >/dev/null 2>&1 & disown
}

udev_umount()
{
	/usr/local/emhttp/plugins/unassigned.devices/scripts/unassigned_umount >/dev/null 2>&1 & disown
}

udev_reload()
{
	/usr/local/emhttp/plugins/unassigned.devices/scripts/unassigned_reload >/dev/null 2>&1 & disown
}

case "$1" in
	'mount')
		udev_mount
	;;
	'umount')
		udev_umount
	;;
	'reload')
		udev_reload
	;;
	*)
		echo "usage $0 mount|umount|reload"
esac
